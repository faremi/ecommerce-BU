<!--================Login Box Area =================-->
<div class="col-lg-6" style="margin-left: 25%">
    <div class="login_form_inner">
        {{#if errorMessage}}
        <div class="error">{{errorMessage}} </div>
        {{/if}}
        <h3>Fill in to set New Password</h3>
        <form class="row login_form" action="/new-password" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="hidden" name="userId" value="{{userId}}">
            <input type="hidden" name="passwordToken" value="{{passwordToken}}">
            <div class="col-md-12 form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'email'">
            </div>


            <div class="col-md-12 form-group">

                <button type="submit" value="submit" class="primary-btn">Reset</button>

            </div>
        </form>
    </div>
</div>
</div>
</div>
</section>
<!--================End Login Box Area =================-->